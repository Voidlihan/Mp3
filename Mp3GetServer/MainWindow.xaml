<Window x:Class="Mp3GetServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mp3GetServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="362*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="304*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="3">
            <ListBox x:Name="listBoxMusics" HorizontalAlignment="Left" Height="290" Grid.Row="1" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="3"/>
            <Button Content="Запустить" Margin="268,0,278,0" Height="56" Background="DarkBlue" Foreground="White" FontSize="20" Click="PlayButton"/>
        </StackPanel>
    </Grid>
</Window>
